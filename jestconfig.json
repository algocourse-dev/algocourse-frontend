{
    "rootDir": ".",
    "modulePaths": [
        "<rootDir>/src/**"
    ],
    "moduleDirectories": [
        "<rootDir>/node_modules",
        "<rootDir>/src",
        "<rootDir>/src/styles"
    ],
    "testMatch": [
        "<rootDir>/test/**/?(*.)+(spec|test).[jt]s?(x)"
    ],
    "coverageThreshold": {
        "global": {
            "branches": 80,
            "functions": 80,
            "lines": 80,
            "statements": 80
        }
    },
    "collectCoverageFrom": [
        "<rootDir>/src/**/*",
        "!<rootDir>/src/styles/**",
        "!<rootDir>/**/index.{ts,tsx,js,jsx}",
        "!<rootDir>/test/**"
    ],
    "coveragePathIgnorePatterns": [
        "<rootDir>/node_modules/"
    ],
    "moduleNameMapper": {
        "^.+\\.(sass)$": "babel-jest"
    }
}
